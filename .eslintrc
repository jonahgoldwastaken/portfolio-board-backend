{
    "extends": "eslint:recommended",
    "globals": {
        "window": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "impliedStrict": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error",
            4
        ],
        "no-var": "warn",
        "block-scoped-var": "error",
        "semi": [
            "error",
            "never"
        ],
        "max-len": [
            "warn",
            {
                "code": 80
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "ignore"
            }
        ],
        "array-bracket-newline": [
            "error",
            {
                "multiline": true,
                "minItems": 2
            }
        ],
        "array-element-newline": [
            "error",
            {
                "multiline": true,
                "minItems": 2
            }
        ]
    }
}